<style>
  .toc.item {
    font-size: 1.3rem !important;
    display: none !important;
  }

  .logo {
    display: flex;
    align-items: center;
    padding: 10px 4px !important;
    color: black;
  }

  #followingMenu .logo {
    display: flex;
    align-items: center;
    height: 70px;
    padding: 10px 4px !important;
    color: black;
  }

  @media only screen and (max-width: 700px) {
    .logo {
      margin: 6px auto !important;
    }

    .toc.item {
      display: block !important;
    }

    #topMenu .right.menu,
    #followingMenu .right.menu {
      display: none !important;
    }

    .logoText {
      display: none;
    }
  }
</style>

<% let dropdownMenu="" ; if(email !="" ){ dropdownMenu=` <div class="menu" style="margin-right: 10px;">
  <a href="/profile" class="item">Profile</a>
  <a href="/logout" class="item">Logout</a>
  </div>
  `;
  }
  else if(email == ""){
  dropdownMenu = `
  <div class="menu" style="margin-right: 10px;">
    <a href="/login" class="item">Login/Register</a>
  </div>
  `;
  }
  %>

  <div class="ui tabular menu" id="topMenu" style="
        width: 100%;
        z-index: 100;
        font-size: 1.1rem;
        border: none;
        ">
    <a class="toc item left">
      <i class="sidebar icon"></i>
    </a>
    <a href="/" class="item logo">
      <img src="images/logo.svg" alt="logo" />
    </a>
    <div class="right menu">
      <a href="/login" class="ui inverted violet button">Login</a>
      <a href="/register" class="ui violet button">Sign Up</a>

      <!-- hidden trigger -->
      <a class="toc item right" style="visibility: hidden;">
        <i class="sidebar icon"></i>
      </a>

    </div>
  </div>
  <!-- following navbar -->
  <div class="ui tabular menu" id="followingMenu" style="
        margin: 0;
        background-color: white;
        box-shadow: 0px 0px 2px 0px #999999 !important;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 100;
        font-size: 1.1rem;
        border: none;
        ">
    <a class="toc item left">
      <i class="sidebar icon"></i>
    </a>
    <a href="/" class="item logo">
      <img src="images/logo.svg" alt="logo" />
    </a>
    <div class="right menu">
      <a href="/login" class="ui inverted violet button">Login</a>
      <a href="/register" class="ui violet button">Sign Up</a>

      <!-- hidden trigger -->
      <a class="toc item right" style="visibility: hidden;">
        <i class="sidebar icon"></i>
      </a>
    </div>

  </div>
  </div>